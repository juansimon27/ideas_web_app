<div class="content-section">
    
    <h3 class="content-title">Sign Up</h3>
    <br>
    
    <%= simple_form_for @user do |f| %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit :Submit, { class: 'btn btn-light' } %>
    <% end %>

</div>

